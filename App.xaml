<Application
    x:Class="TrueReplayer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrueReplayer">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Tema escuro global (legado) -->
            <SolidColorBrush x:Key="SystemControlBackgroundBaseLowBrush" Color="#1e1e1e" />
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="White" />
            <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#3A96DD" />

            <!-- Background brushes -->
            <SolidColorBrush x:Key="MicaBackgroundBrush" Color="#202020" />
            <SolidColorBrush x:Key="LayerBackgroundBrush" Color="#2d2d2d" />
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#323232" />
            <SolidColorBrush x:Key="SmokeBackgroundBrush" Color="#1a1a1a" />

            <!-- Border brushes -->
            <SolidColorBrush x:Key="CardBorderBrush" Color="#0FFFFFFF" />
            <SolidColorBrush x:Key="SubtleBorderBrush" Color="#14FFFFFF" />
            <SolidColorBrush x:Key="DefaultBorderBrush" Color="#1AFFFFFF" />
            <SolidColorBrush x:Key="DividerBrush" Color="#14FFFFFF" />

            <!-- Text brushes -->
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#C5C5C5" />
            <SolidColorBrush x:Key="TextTertiaryBrush" Color="#9A9A9A" />
            <SolidColorBrush x:Key="TextDisabledBrush" Color="#5C5C5C" />

            <!-- Accent -->
            <SolidColorBrush x:Key="AccentBrush" Color="#60CDFF" />
            <SolidColorBrush x:Key="AccentSolidBrush" Color="#0078D4" />

            <!-- Semantic button colors -->
            <SolidColorBrush x:Key="RecordingRedBrush" Color="#C42B1C" />
            <SolidColorBrush x:Key="ReplayGreenBrush" Color="#0E7A0D" />

            <!-- Action type pill colors -->
            <SolidColorBrush x:Key="MousePillBackgroundBrush" Color="#1AA78BFA" />
            <SolidColorBrush x:Key="MousePillForegroundBrush" Color="#A78BFA" />
            <SolidColorBrush x:Key="KeyPillBackgroundBrush" Color="#1A60CDFF" />
            <SolidColorBrush x:Key="KeyPillForegroundBrush" Color="#60CDFF" />
            <SolidColorBrush x:Key="ScrollPillBackgroundBrush" Color="#1A6BCB77" />
            <SolidColorBrush x:Key="ScrollPillForegroundBrush" Color="#6BCB77" />

            <!-- Status badge - Ready -->
            <SolidColorBrush x:Key="StatusReadyBackgroundBrush" Color="#1A6BCB77" />
            <SolidColorBrush x:Key="StatusReadyForegroundBrush" Color="#6BCB77" />
            <SolidColorBrush x:Key="StatusReadyBorderBrush" Color="#336BCB77" />

            <!-- Status badge - Recording -->
            <SolidColorBrush x:Key="StatusRecordingBackgroundBrush" Color="#1AFF6B6B" />
            <SolidColorBrush x:Key="StatusRecordingForegroundBrush" Color="#FF6B6B" />
            <SolidColorBrush x:Key="StatusRecordingBorderBrush" Color="#33FF6B6B" />

            <!-- Status badge - Replaying -->
            <SolidColorBrush x:Key="StatusReplayingBackgroundBrush" Color="#1A60CDFF" />
            <SolidColorBrush x:Key="StatusReplayingForegroundBrush" Color="#60CDFF" />
            <SolidColorBrush x:Key="StatusReplayingBorderBrush" Color="#3360CDFF" />

            <!-- Hotkey badge -->
            <SolidColorBrush x:Key="HotkeyBadgeBackgroundBrush" Color="#14FFD93D" />
            <SolidColorBrush x:Key="HotkeyBadgeForegroundBrush" Color="#FFD93D" />
            <SolidColorBrush x:Key="HotkeyBadgeBorderBrush" Color="#26FFD93D" />

            <!-- Thinner scrollbars (default is 12) -->
            <x:Double x:Key="ScrollBarSize">6</x:Double>

            <!-- Corner radii -->
            <CornerRadius x:Key="CardCornerRadius">6</CornerRadius>
            <CornerRadius x:Key="SmallCornerRadius">4</CornerRadius>
            <CornerRadius x:Key="MediumCornerRadius">8</CornerRadius>

        </ResourceDictionary>
    </Application.Resources>
</Application>