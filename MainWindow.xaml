<Window x:Class="TrueReplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:TrueReplayer"
        xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="using:TrueReplayer.Converters"
        xmlns:models="using:TrueReplayer.Models"
        mc:Ignorable="d">

    <Grid Background="{StaticResource MicaBackgroundBrush}" RequestedTheme="Dark">
        <Grid.Resources>
            <converters:NonNegativeIntConverter x:Key="NonNegativeIntConverter" />
            <converters:InsertionHighlightConverter x:Key="InsertionHighlightConverter" />
            <converters:ActionTypeToBrushConverter x:Key="ActionTypeToBrushConverter" />
            <converters:ActionTypeToIconConverter x:Key="ActionTypeToIconConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:ActiveProfileBrushConverter x:Key="ActiveProfileBrushConverter" />
            <converters:ActiveProfileFontWeightConverter x:Key="ActiveProfileFontWeightConverter" />

            <!-- ToggleSwitch blue accent overrides (ON state) -->
            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="#0078D4" />
            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="#1a86d8" />
            <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="#006cbd" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOn" Color="#0078D4" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOnPointerOver" Color="#1a86d8" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOnPressed" Color="#006cbd" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOn" Color="White" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOnPointerOver" Color="White" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOnPressed" Color="White" />

            <!-- ToggleSwitch darker OFF state (smoke-bg #1a1a1a) -->
            <SolidColorBrush x:Key="ToggleSwitchFillOff" Color="#1a1a1a" />
            <SolidColorBrush x:Key="ToggleSwitchFillOffPointerOver" Color="#252525" />
            <SolidColorBrush x:Key="ToggleSwitchFillOffPressed" Color="#161616" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOff" Color="#3a3a3a" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOffPointerOver" Color="#444444" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOffPressed" Color="#333333" />

            <!-- DataGrid column header background overrides (match card #2d2d2d) -->
            <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="#2d2d2d" />
            <Color x:Key="DataGridColumnHeaderBackgroundColor">#2d2d2d</Color>
            <Color x:Key="DataGridColumnHeaderHoveredBackgroundColor">#353535</Color>
            <Color x:Key="DataGridColumnHeaderPressedBackgroundColor">#2a2a2a</Color>
            <SolidColorBrush x:Key="DataGridColumnHeaderForegroundBrush" Color="#9A9A9A" />

            <!-- TextBox darker background for settings -->
            <SolidColorBrush x:Key="TextControlBackground" Color="#1a1a1a" />
            <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="#222222" />
            <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="#1a1a1a" />
            <SolidColorBrush x:Key="TextControlBorderBrush" Color="#3a3a3a" />
            <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="#4a4a4a" />
            <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="#0078D4" />

        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="26" />
        </Grid.RowDefinitions>

        <!-- ==================== ROW 0: TITLE BAR ==================== -->
        <Grid Grid.Row="0" Background="{StaticResource SmokeBackgroundBrush}"
              BorderBrush="{StaticResource SubtleBorderBrush}" BorderThickness="0,0,0,1"
              Padding="16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Width="18" Height="18" CornerRadius="4"
                    Background="{StaticResource AccentSolidBrush}"
                    VerticalAlignment="Center" Margin="0,0,12,0">
                <TextBlock Text="T" FontSize="10" FontWeight="Bold"
                           Foreground="White" HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Border>

            <TextBlock Grid.Column="1" Text="TrueReplayer" FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       VerticalAlignment="Center" />

            <Border x:Name="StatusBadge" Grid.Column="3"
                    Background="{StaticResource StatusReadyBackgroundBrush}"
                    BorderBrush="{StaticResource StatusReadyBorderBrush}"
                    BorderThickness="1" CornerRadius="10"
                    Padding="10,4"
                    VerticalAlignment="Center"
                    Margin="0,0,140,0">
                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                    <Ellipse x:Name="StatusDot" Width="6" Height="6"
                             Fill="{StaticResource StatusReadyForegroundBrush}" />
                    <TextBlock x:Name="StatusText" Text="Ready" FontSize="11"
                               FontWeight="Medium"
                               Foreground="{StaticResource StatusReadyForegroundBrush}" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- ==================== ROW 1: MAIN CONTENT ==================== -->
        <Grid Grid.Row="1" Padding="8" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>

            <!-- ========== COLUMN 0: PROFILES CARD ========== -->
            <Border Grid.Column="0"
                    Background="{StaticResource LayerBackgroundBrush}"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    BorderThickness="1" CornerRadius="{StaticResource CardCornerRadius}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Padding="16,14,16,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="PROFILES" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   CharacterSpacing="50" VerticalAlignment="Center" />
                        <Button Grid.Column="1" Content="&#xE710;"
                                FontFamily="Segoe Fluent Icons" FontSize="14"
                                Click="CreateNewProfile_Click"
                                Background="Transparent" BorderThickness="0"
                                Padding="4" Width="28" Height="28" CornerRadius="4" />
                    </Grid>

                    <AutoSuggestBox x:Name="ProfileSearchBox" Grid.Row="1"
                                    PlaceholderText="Search profiles..."
                                    QueryIcon="Find" Margin="10,0,10,8"
                                    TextChanged="ProfileSearchBox_TextChanged" />

                    <ListView x:Name="ProfilesListBox"
                              x:FieldModifier="public"
                              Grid.Row="2"
                              Background="Transparent"
                              BorderThickness="0"
                              SelectionMode="Single"
                              IsItemClickEnabled="True"
                              ItemClick="ProfilesListBox_ItemClick"
                              RightTapped="ProfilesListBox_RightTapped"
                              Padding="6,0,6,8">

                        <ListView.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="New Profile" Click="CreateNewProfile_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE8A5;" Foreground="#6BCB77" />
                                    </MenuFlyoutItem.Icon>
                                    <MenuFlyoutItem.KeyboardAcceleratorTextOverride>Ctrl+N</MenuFlyoutItem.KeyboardAcceleratorTextOverride>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Rename" Click="RenameProfile_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE8AC;" />
                                    </MenuFlyoutItem.Icon>
                                    <MenuFlyoutItem.KeyboardAcceleratorTextOverride>F2</MenuFlyoutItem.KeyboardAcceleratorTextOverride>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Open Directory" Click="OpenProfileFolder_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE838;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Assign Hotkey" Click="AssignProfileHotkey_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE765;" Foreground="#60CDFF" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Remove Hotkey" Click="RemoveProfileHotkey_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE711;" Foreground="#FF6B6B" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Delete Profile" Click="DeleteProfile_Click" Foreground="#FF6B6B">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE74D;" Foreground="#FF6B6B" />
                                    </MenuFlyoutItem.Icon>
                                    <MenuFlyoutItem.KeyboardAcceleratorTextOverride>Del</MenuFlyoutItem.KeyboardAcceleratorTextOverride>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </ListView.ContextFlyout>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,1,0,0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="CornerRadius" Value="4" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Blue accent indicator bar -->
                                    <Border Grid.Column="0" CornerRadius="2"
                                            Margin="-10,0,6,0" Width="3"
                                            Background="{StaticResource AccentSolidBrush}"
                                            Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}" />

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Name}"
                                               FontSize="13"
                                               Foreground="{Binding IsActive, Converter={StaticResource ActiveProfileBrushConverter}}"
                                               FontWeight="{Binding IsActive, Converter={StaticResource ActiveProfileFontWeightConverter}}"
                                               VerticalAlignment="Center" />

                                    <Border Grid.Column="2"
                                            Background="{StaticResource HotkeyBadgeBackgroundBrush}"
                                            BorderBrush="{StaticResource HotkeyBadgeBorderBrush}"
                                            BorderThickness="1" CornerRadius="4"
                                            Padding="6,1" Margin="4,0,0,0"
                                            Visibility="{Binding Hotkey, Converter={StaticResource StringToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Hotkey}" FontSize="11"
                                                   FontFamily="Consolas"
                                                   Foreground="{StaticResource HotkeyBadgeForegroundBrush}" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- ========== COLUMN 1: CENTER CONTENT ========== -->
            <Grid Grid.Column="1" RowSpacing="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- TOOLBAR CARD -->
                <Border Grid.Row="0"
                        Background="{StaticResource LayerBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1" CornerRadius="{StaticResource CardCornerRadius}"
                        Padding="16,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <TextBlock x:Name="ToolbarProfileName" Text="No Profile"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" />
                            <Border Background="{StaticResource SmokeBackgroundBrush}"
                                    BorderBrush="{StaticResource SubtleBorderBrush}"
                                    BorderThickness="1" CornerRadius="10"
                                    Padding="10,3"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="ToolbarActionCount" Text="0 actions"
                                           FontSize="12" VerticalAlignment="Center"
                                           Foreground="{StaticResource TextTertiaryBrush}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                            <Button x:Name="CopyButton" Content="&#xE8C8;"
                                    FontFamily="Segoe Fluent Icons" FontSize="14"
                                    Click="CopyButton_Click" CornerRadius="4"
                                    Padding="8,6" ToolTipService.ToolTip="Copy Actions" />
                            <Button x:Name="ClearButton" Content="&#xE74D;"
                                    FontFamily="Segoe Fluent Icons" FontSize="14"
                                    Click="ClearButton_Click" CornerRadius="4"
                                    Padding="8,6" ToolTipService.ToolTip="Clear All" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- DATAGRID CARD -->
                <Border Grid.Row="1"
                        Background="{StaticResource LayerBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1" CornerRadius="{StaticResource CardCornerRadius}">
                    <controls:DataGrid x:Name="ActionsDataGrid"
                                       SelectionMode="Extended"
                                       AutoGenerateColumns="False"
                                       ItemsSource="{x:Bind Actions, Mode=OneWay}"
                                       CanUserSortColumns="False"
                                       CanUserReorderColumns="False"
                                       HeadersVisibility="Column"
                                       GridLinesVisibility="None"
                                       BorderThickness="0"
                                       RowBackground="#2d2d2d"
                                       AlternatingRowBackground="#303030"
                                       Foreground="White"
                                       Background="Transparent"
                                       Margin="0"
                                       ColumnHeaderHeight="36"
                                       RowHeight="36">

                        <controls:DataGrid.ColumnHeaderStyle>
                            <Style TargetType="controlsPrimitives:DataGridColumnHeader"
                                   xmlns:controlsPrimitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="#9A9A9A" />
                                <Setter Property="FontSize" Value="12" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <!-- Header text position: Left, Top, Right, Bottom -->
                                <Setter Property="Padding" Value="7,0,-20,0" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="BorderBrush" Value="#14FFFFFF" />
                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                <Setter Property="SeparatorVisibility" Value="Collapsed" />
                            </Style>
                        </controls:DataGrid.ColumnHeaderStyle>

                        <controls:DataGrid.RowStyle>
                            <Style TargetType="controls:DataGridRow">
                                <Setter Property="Background"
                                        Value="{Binding ShouldHighlight, Converter={StaticResource InsertionHighlightConverter}}" />
                            </Style>
                        </controls:DataGrid.RowStyle>

                        <controls:DataGrid.Columns>
                            <!-- Row number column -->
                            <controls:DataGridTemplateColumn Header="#" Width="35" MinWidth="35" IsReadOnly="True">
                                <controls:DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="controlsPrimitives:DataGridColumnHeader"
                                           xmlns:controlsPrimitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="#9A9A9A" />
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                        <!-- # header: Left, Top, Right, Bottom -->
                                        <Setter Property="Padding" Value="12,0,-20,0" />
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="BorderBrush" Value="#14FFFFFF" />
                                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                                        <Setter Property="SeparatorVisibility" Value="Collapsed" />
                                    </Style>
                                </controls:DataGridTemplateColumn.HeaderStyle>
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RowNumber}" FontSize="11"
                                                   FontFamily="Consolas"
                                                   Foreground="#5C5C5C"
                                                   VerticalAlignment="Center" Padding="12,0,0,0" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- Action column with colored pills -->
                            <controls:DataGridTemplateColumn Header="Action" Width="140" MinWidth="140">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding ActionType, Converter={StaticResource ActionTypeToBrushConverter}, ConverterParameter=background}"
                                                CornerRadius="4" Padding="8,3" Margin="4,2"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                <FontIcon Glyph="{Binding ActionType, Converter={StaticResource ActionTypeToIconConverter}}"
                                                          FontSize="11"
                                                          Foreground="{Binding ActionType, Converter={StaticResource ActionTypeToBrushConverter}, ConverterParameter=foreground}" />
                                                <TextBlock Text="{Binding ActionType}" FontSize="12"
                                                           FontWeight="Medium"
                                                           Foreground="{Binding ActionType, Converter={StaticResource ActionTypeToBrushConverter}, ConverterParameter=foreground}"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                                <controls:DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox SelectedItem="{Binding ActionType, Mode=TwoWay}"
                                                  HorizontalAlignment="Stretch" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellEditingTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- Key column with badge style -->
                            <controls:DataGridTemplateColumn Header="Key" Width="100" MinWidth="100">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#1a1a1a" CornerRadius="4"
                                                Padding="8,2" Margin="5,6"
                                                HorizontalAlignment="Left"
                                                Visibility="{Binding DisplayKey, Converter={StaticResource StringToVisibilityConverter}}">
                                            <TextBlock Text="{Binding DisplayKey}" Foreground="White"
                                                       FontFamily="Consolas" FontSize="12"
                                                       VerticalAlignment="Center" />
                                        </Border>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                                <controls:DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox PreviewKeyDown="KeyEditTextBox_PreviewKeyDown"
                                                 Text="{Binding DisplayKey, Mode=OneWay}"
                                                 Background="#1a1a1a" Foreground="White"
                                                 HorizontalContentAlignment="Left"
                                                 VerticalContentAlignment="Center"
                                                 Padding="8,5" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellEditingTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- X column -->
                            <controls:DataGridTemplateColumn Header="X" Width="65" MinWidth="65">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding X}" FontSize="12" FontFamily="Consolas"
                                                   Foreground="#C5C5C5"
                                                   VerticalAlignment="Center" Padding="8,0" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                                <controls:DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding X, Mode=TwoWay}" Background="#1a1a1a" Foreground="White"
                                                 Padding="8,5" VerticalContentAlignment="Center" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellEditingTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- Y column -->
                            <controls:DataGridTemplateColumn Header="Y" Width="65" MinWidth="65">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Y}" FontSize="12" FontFamily="Consolas"
                                                   Foreground="#C5C5C5"
                                                   VerticalAlignment="Center" Padding="8,0" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                                <controls:DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Y, Mode=TwoWay}" Background="#1a1a1a" Foreground="White"
                                                 Padding="8,5" VerticalContentAlignment="Center" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellEditingTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- Delay column with golden color -->
                            <controls:DataGridTemplateColumn Header="Delay" Width="70" MinWidth="70">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Delay, Converter={StaticResource NonNegativeIntConverter}}"
                                                   FontSize="12" FontFamily="Consolas"
                                                   Foreground="#FFD93D" FontWeight="Medium"
                                                   VerticalAlignment="Center" Padding="10,0" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                                <controls:DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Delay, Mode=TwoWay, Converter={StaticResource NonNegativeIntConverter}}"
                                                 Background="#1a1a1a" Foreground="#FFD93D"
                                                 Padding="8,5" VerticalContentAlignment="Center" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellEditingTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- Notes column with muted color -->
                            <controls:DataGridTemplateColumn Header="Notes" Width="*" MinWidth="85">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Comment}" FontSize="12"
                                                   Foreground="#9A9A9A"
                                                   VerticalAlignment="Center" Padding="9,0"
                                                   TextTrimming="CharacterEllipsis" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                                <controls:DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Comment, Mode=TwoWay}"
                                                 Background="#1a1a1a" Foreground="White"
                                                 Padding="8,5" VerticalContentAlignment="Center" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellEditingTemplate>
                            </controls:DataGridTemplateColumn>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Border>

                <!-- ACTION BAR CARD -->
                <Border Grid.Row="2"
                        Background="{StaticResource LayerBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1" CornerRadius="{StaticResource CardCornerRadius}"
                        Padding="16,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Button x:Name="RecordingButton" Click="RecordingButton_Click"
                                    Background="{StaticResource RecordingRedBrush}"
                                    Foreground="White" CornerRadius="4"
                                    Padding="20,8" FontSize="13">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Ellipse x:Name="RecordingIndicator" Width="8" Height="8" Fill="White" />
                                    <TextBlock x:Name="RecordingButtonText" Text="Recording" FontWeight="SemiBold" />
                                </StackPanel>
                            </Button>

                            <Button x:Name="ReplayButton" Click="ReplayButton_Click"
                                    Background="{StaticResource ReplayGreenBrush}"
                                    Foreground="White" CornerRadius="4"
                                    Padding="20,8" FontSize="13">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE768;" FontSize="12" Foreground="White" />
                                    <TextBlock x:Name="ReplayButtonText" Text="Replay" FontWeight="SemiBold" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                            <Button x:Name="SaveButton" Click="SaveButton_Click" CornerRadius="4" Padding="14,6">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE105;" FontSize="14" />
                                    <TextBlock Text="Save" FontSize="13" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="LoadButton" Click="LoadButton_Click" CornerRadius="4" Padding="14,6">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="14" />
                                    <TextBlock Text="Load" FontSize="13" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="ResetButton" Click="ResetButton_Click" CornerRadius="4" Padding="14,6"
                                    Foreground="{StaticResource TextTertiaryBrush}">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE149;" FontSize="14" />
                                    <TextBlock Text="Reset" FontSize="13" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- ========== COLUMN 2: SETTINGS PANEL ========== -->
            <ScrollViewer x:Name="SettingsScrollViewer" Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ConfigPanel" Spacing="4">

                    <!-- EXPANDER: Execution -->
                    <Border Background="{StaticResource LayerBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="0" CornerRadius="{StaticResource CardCornerRadius}">
                        <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                  IsExpanded="True" Background="Transparent" Padding="0">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE121;" FontSize="14" Foreground="#FFD93D" />
                                    <TextBlock Text="Execution" FontSize="13" FontWeight="SemiBold" />
                                </StackPanel>
                            </Expander.Header>
                            <Expander.Content>
                                <StackPanel Spacing="0" Padding="4,4,0,4">
                                    <!-- Fixed Delay -->
                                    <Grid Padding="0,-2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Fixed Delay" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                            <TextBox x:Name="CustomDelayTextBox" x:FieldModifier="public"
                                                     Text="100" Width="64" Height="10" GotFocus="TextBox_SelectAll"
                                                     Padding="8,8" FontSize="13" FontFamily="Consolas" TextAlignment="Left"
                                                     VerticalContentAlignment="Center" CornerRadius="4" />
                                            <TextBlock Text="ms" FontSize="11" Foreground="{StaticResource TextDisabledBrush}" VerticalAlignment="Center" Width="16" />
                                            <ToggleSwitch x:Name="UseCustomDelaySwitch" x:FieldModifier="public"
                                                          IsOn="True" MinWidth="0" MinHeight="0"
                                                          OnContent="" OffContent="" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                    <!-- Loop Count -->
                                    <Grid Padding="0,-2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Loop Count" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                            <TextBox x:Name="LoopCountTextBox" x:FieldModifier="public"
                                                     Text="1" Width="64" Height="10" GotFocus="TextBox_SelectAll"
                                                     Padding="8,8" FontSize="13" FontFamily="Consolas" TextAlignment="Left"
                                                     VerticalContentAlignment="Center" CornerRadius="4" />
                                            <TextBlock Text="x" FontSize="11" Foreground="{StaticResource TextDisabledBrush}" VerticalAlignment="Center" Width="16" />
                                            <ToggleSwitch x:Name="EnableLoopSwitch" x:FieldModifier="public"
                                                          IsOn="False" MinWidth="0" MinHeight="0"
                                                          OnContent="" OffContent="" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                    <!-- Loop Delay -->
                                    <Grid Padding="0,-2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Loop Delay" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                            <TextBox x:Name="LoopIntervalTextBox" x:FieldModifier="public"
                                                     Text="1000" Width="64" Height="10" GotFocus="TextBox_SelectAll"
                                                     Padding="8,8" FontSize="13" FontFamily="Consolas" TextAlignment="Left"
                                                     VerticalContentAlignment="Center" CornerRadius="4" />
                                            <TextBlock Text="ms" FontSize="11" Foreground="{StaticResource TextDisabledBrush}" VerticalAlignment="Center" Width="16" />
                                            <ToggleSwitch x:Name="LoopIntervalSwitch" x:FieldModifier="public"
                                                          IsOn="False" MinWidth="0" MinHeight="0"
                                                          OnContent="" OffContent="" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Expander.Content>
                        </Expander>
                    </Border>

                    <!-- EXPANDER: Recording -->
                    <Border Background="{StaticResource LayerBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="0" CornerRadius="{StaticResource CardCornerRadius}">
                        <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                  IsExpanded="True" Background="Transparent" Padding="0">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE720;" FontSize="14" Foreground="#FF6B6B" />
                                    <TextBlock Text="Recording" FontSize="13" FontWeight="SemiBold" />
                                </StackPanel>
                            </Expander.Header>
                            <Expander.Content>
                                <StackPanel Spacing="0" Padding="4,0,0,4">
                                    <Grid Padding="0,-2">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" /></Grid.ColumnDefinitions>
                                        <TextBlock Text="Mouse Clicks" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <ToggleSwitch x:Name="RecordMouseSwitch" x:FieldModifier="public" Grid.Column="1" IsOn="True" MinWidth="0" MinHeight="0" OnContent="" OffContent="" VerticalAlignment="Center" />
                                    </Grid>
                                    <Grid Padding="0,-2">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" /></Grid.ColumnDefinitions>
                                        <TextBlock Text="Mouse Scroll" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <ToggleSwitch x:Name="RecordScrollSwitch" x:FieldModifier="public" Grid.Column="1" IsOn="True" MinWidth="0" MinHeight="0" OnContent="" OffContent="" VerticalAlignment="Center" />
                                    </Grid>
                                    <Grid Padding="0,-2">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" /></Grid.ColumnDefinitions>
                                        <TextBlock Text="Keyboard" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <ToggleSwitch x:Name="RecordKeyboardSwitch" x:FieldModifier="public" Grid.Column="1" IsOn="True" MinWidth="0" MinHeight="0" OnContent="" OffContent="" VerticalAlignment="Center" />
                                    </Grid>
                                    <Grid Padding="0,-2">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" /></Grid.ColumnDefinitions>
                                        <TextBlock Text="Profile Keys" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <ToggleSwitch x:Name="ProfileKeySwitch" x:FieldModifier="public" Grid.Column="1" IsOn="True" MinWidth="0" MinHeight="0" OnContent="" OffContent="" VerticalAlignment="Center" />
                                    </Grid>
                                </StackPanel>
                            </Expander.Content>
                        </Expander>
                    </Border>

                    <!-- EXPANDER: Hotkeys -->
                    <Border Background="{StaticResource LayerBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="0" CornerRadius="{StaticResource CardCornerRadius}">
                        <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                  IsExpanded="True" Background="Transparent" Padding="0">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE945;" FontSize="14" Foreground="#60CDFF" />
                                    <TextBlock Text="Hotkeys" FontSize="13" FontWeight="SemiBold" />
                                </StackPanel>
                            </Expander.Header>
                            <Expander.Content>
                                <StackPanel Spacing="0" Padding="4,4,4,4">
                                    <Grid Padding="0,0">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" /></Grid.ColumnDefinitions>
                                        <TextBlock Text="Recording" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <TextBox x:Name="ToggleRecordingTextBox" x:FieldModifier="public"
                                                 Grid.Column="1" IsReadOnly="True" Width="110"
                                                 TextAlignment="Center" FontFamily="Consolas" FontSize="12"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 Padding="8,8" Height="10" VerticalContentAlignment="Center"
                                                 CornerRadius="4" />
                                    </Grid>
                                    <Grid Padding="0,0">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" /></Grid.ColumnDefinitions>
                                        <TextBlock Text="Replay" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <TextBox x:Name="ToggleReplayTextBox" x:FieldModifier="public"
                                                 Grid.Column="1" IsReadOnly="True" Width="110"
                                                 TextAlignment="Center" FontFamily="Consolas" FontSize="12"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 Padding="8,8" Height="10" VerticalContentAlignment="Center"
                                                 CornerRadius="4" />
                                    </Grid>
                                    <Grid Padding="0,0">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" /></Grid.ColumnDefinitions>
                                        <TextBlock Text="Profile Keys" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <TextBox x:Name="ToggleProfileKeyTextBox" x:FieldModifier="public"
                                                 Grid.Column="1" IsReadOnly="True" Width="110"
                                                 TextAlignment="Center" FontFamily="Consolas" FontSize="12"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 Padding="8,8" Height="10" VerticalContentAlignment="Center"
                                                 CornerRadius="4" />
                                    </Grid>
                                </StackPanel>
                            </Expander.Content>
                        </Expander>
                    </Border>

                    <!-- EXPANDER: Window -->
                    <Border Background="{StaticResource LayerBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="0" CornerRadius="{StaticResource CardCornerRadius}">
                        <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                  IsExpanded="True" Background="Transparent" Padding="0">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE737;" FontSize="14" Foreground="#9A9A9A" />
                                    <TextBlock Text="Window" FontSize="13" FontWeight="SemiBold" />
                                </StackPanel>
                            </Expander.Header>
                            <Expander.Content>
                                <StackPanel Spacing="0" Padding="4,0,0,4">
                                    <Grid Padding="0,-2">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" /></Grid.ColumnDefinitions>
                                        <TextBlock Text="Always On Top" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <ToggleSwitch x:Name="AlwaysOnTopSwitch" x:FieldModifier="public" Grid.Column="1"
                                                      IsOn="False" Toggled="AlwaysOnTopSwitch_Toggled" MinWidth="0" MinHeight="0"
                                                      OnContent="" OffContent="" VerticalAlignment="Center" />
                                    </Grid>
                                    <Grid Padding="0,-2">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" /></Grid.ColumnDefinitions>
                                        <TextBlock Text="System Tray" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center" />
                                        <ToggleSwitch x:Name="MinimizeToTraySwitch" x:FieldModifier="public" Grid.Column="1"
                                                      IsOn="False" MinWidth="0" MinHeight="0"
                                                      OnContent="" OffContent="" VerticalAlignment="Center" />
                                    </Grid>
                                </StackPanel>
                            </Expander.Content>
                        </Expander>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- ==================== ROW 2: STATUS BAR ==================== -->
        <Border Grid.Row="2" Background="{StaticResource SmokeBackgroundBrush}"
                BorderBrush="{StaticResource SubtleBorderBrush}" BorderThickness="0,1,0,0">
            <Grid Padding="16,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusBarDirectory" Grid.Column="0"
                           Text="Profiles" FontSize="11"
                           Foreground="{StaticResource TextDisabledBrush}"
                           VerticalAlignment="Center" />

                <Rectangle Grid.Column="1" Width="1" Height="12"
                           Fill="{StaticResource SubtleBorderBrush}" Margin="12,0" />

                <TextBlock x:Name="StatusBarProfile" Grid.Column="2"
                           Text="No profile" FontSize="11"
                           Foreground="{StaticResource TextDisabledBrush}"
                           VerticalAlignment="Center" />

                <TextBlock x:Name="StatusBarActionCount" Grid.Column="4"
                           Text="0 actions" FontSize="11"
                           Foreground="{StaticResource TextDisabledBrush}"
                           VerticalAlignment="Center" />

                <Rectangle Grid.Column="5" Width="1" Height="12"
                           Fill="{StaticResource SubtleBorderBrush}" Margin="12,0" />

                <TextBlock Grid.Column="6" Text="v1.0.0" FontSize="11"
                           Foreground="{StaticResource TextDisabledBrush}"
                           VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</Window>
